<h3> <%= t('.title')%> </h3>
<p><%= @test.title %></p>
<h3> <%= t('.level')%> </h3>
<p><%= test_level(@test) %></p>
<h3> <%= t('.category')%> </h3>
<p><%= @test.category.title %></p>
<h3> <%= t('.author')%> </h3>
<% if @test.author.present? %>
  <p><%= @test.author.email %></p>
<% else %>
  <p> <%= t('.no_author')%> </p>
<% end %>
<h3> <%= t('.questions')%> </h3>
<% if @test.questions.present? %>
  <table>
    <tr>
      <th> <%= t('.body')%> </th>
      <th colspan="3"> <%= t('.actions')%> </th>
    </tr>
    <%= render @test.questions %>
  </table>
<% else %>
  <p>No questions for this test yet</p>
<% end %>
<br>
<%= link_to t('.create_new_question'), new_admin_test_question_path(@test) %><br>
<%= link_to t('.edit'), edit_admin_test_path(@test) %><br>
<%= link_to t('.back'), admin_tests_path %>
