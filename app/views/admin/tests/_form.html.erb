<div class="card border-primary">
  <div class="card-body">
    <%= form_with model: [:admin, @test], local: true do |form| %>
      <div class="form-group">
        <%= render "shared/errors", resource: @test %>
        <p>
          <%= form.label :title %>
          <%= form.text_field :title, class: "form-control" %>
        </p>
        <br>
        <p>
          <%= form.label :level %>
          <%= form.number_field :level, class: "form-control" %>
        </p>
        <br>
        <p>
          <%= form.label :category_id %>
          <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
        </p>
        <br>
        <p>
          <%= form.label :passing_time %> 
          <%= form.number_field :passing_time, class: "form-control" %>
        </p>
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>
