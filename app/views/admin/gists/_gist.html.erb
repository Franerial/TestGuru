<tr>
  <td> <%= link_to("#{gist.question.body.slice(0, 25) }...", admin_question_path(gist.question)) %> </td>
  <td> <%= gist.user.email %> </td>
  <td> <%= link_to("#{Digest::SHA1.hexdigest(gist.url) }", gist.url, target: "_blank") %> </td>
  <td>
    <%= link_to admin_gist_path(gist), method: :delete, data: { confirm: "Are you sure?" }, :class => "btn btn-danger" do %>
      <i class="bi bi-trash"> <%= t('.delete_btn') %> </i>
    <% end %>
  </td>
</tr>
