<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <center>
      <h2> <%= t('.header') %> </h2>
    </center>
    <div class="card border-primary">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: "new_user_reg_form" }) do |f| %>
          <div class="form-group">
            <%= render "devise/shared/error_messages", resource: resource %>
            <p>
              <%= f.label :first_name %><br />
              <%= f.text_field :first_name, required: true, class: "form-control", placeholder: t('.first_name_enter') %>
            </p>
            <p>
              <%= f.label :last_name %><br />
              <%= f.text_field :last_name, required: true, class: "form-control", placeholder: t('.last_name_enter') %>
            </p>
            <p>
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t('.email_enter') %>
            </p>
            <p>
              <%= f.label :password %>
              <% if @minimum_password_length %>
                <em>(<%= t('.minimum_password_length', count: @minimum_password_length) %>)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "password" %>
            </p>
            <p>
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "confirm_password" %>
            </p>
            <%= f.submit t('.sign_up'), class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="mt-1">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
<br>
