<% if logged_in? %>
  <p class = "nav user">
    Welcome, <b><%= current_user.name %></b> <%= link_to 'Guru', root_path %> <%= link_to 'Exit', logout_path, method: :delete %>
  </p>
<% else %>
  <p class = "nav user">
    <%= link_to 'Registration', signup_path %>
    <%= link_to 'Login', login_path %>
  </p>
<% end %>
